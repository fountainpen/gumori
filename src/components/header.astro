---
import { site, nav } from '../config/gumori'
const { page, post } = Astro.props
---

<header>
  { page
    ? (<h1>{site.title}</h1>)
    : (<h2><a href="/">{site.title}</a></h2>)
  }
  {nav?.length && (
  <nav>
    <p>
    {nav.map(({ text, link }, index: number) => text && (
    <a href={link}>{text}</a>
      <>
        {index + 1 < nav.length && (<span>&nbsp;&nbsp;</span>)}
      </>
      ))}
    </p>
  </nav>
  )}
</header>