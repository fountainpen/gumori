---
import { site, nav } from '@src/gumori'

export interface Props {
  page?: Page
  post?: Post
}

const { page, post } = Astro.props as Props
---

<header>
  { page
  ? (<h1>{site.title}</h1>)
  : (<h2><a href="/">{site.title}</a></h2>)
  }
  {nav?.length && (
  <nav>
    <p>
      {nav.map(({ text, link }, index: number) => text && (
      <a href={link}>{text}</a>
      <>
        {index + 1 < nav.length && (<span>&nbsp;&nbsp;</span>)}
        </>
        ))}
    </p>
  </nav>
  )}
</header>